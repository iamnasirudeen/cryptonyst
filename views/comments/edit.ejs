  <div class="container">
    <div class="row">
      <h3 class="text-center">Edit comment</h3>
      <div style="width: 45%; margin: 30px auto;">
      	<form action="/blogs/<%= blog_id %>/comments/<%= comment._id %>?_method=PUT" method="post">
        	<div class="form-group">
          	<input id="pad" class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
          </div>
          <div class="form-group">
            <button id="pad" class="btn btn-block btn-md btn-success">Send</button>
          </div>
        </form>
      </div>
    </div>
  </div>

